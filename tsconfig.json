{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "rootDir": "src",
        "paths": {
            "*": [
                "./src/types",
                "./node_modules/@types",
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude" :[
        "node_modules",
        "dist"
    ]
}